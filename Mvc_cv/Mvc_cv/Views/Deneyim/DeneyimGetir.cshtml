@model Mvc_cv.Models.Entity.Tbl_Deneyimlerim
@{
    ViewBag.Title = "DeneyimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Deneyim Güncelleme Sayfası</h2>
<form method="post">
    @Html.Label("Deneyim ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.Label("Alt Başlık")
    @Html.TextBoxFor(x => x.Alt_Baslik, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, 15, 25, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    <input type="date" name="Tarih" value="@ViewBag.x" class="form-control"/>
    <br />
    <button class="btn btn-primary">Deneyim Güncelle</button>
</form>


