@using Mvc_cv.Models.Entity
@model List<Tbl_Sertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";}
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <br />
                <a href="/Sertifika/SertifikaEkle/" class="btn btn-warning">Yeni Sertifika Ekle</a>
                <br />
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        @foreach (var item in Model)
                        {
                            if (item.ID % 2 == 0)
                            {
                                renk = "bg-dark";
                            }
                            else
                            {
                                renk = "bg-success";
                            }
                            <div class="card-body">

                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="@renk">
                                                @item.Tarih
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-envelope bg-primary"></i>
                                            <div class="timeline-item">
                                                <span class="time"></span>
                                                <div class="timeline-body" style="        background-color: #dedddd;
        color: black">
                                                    <h4>   Sertifika Adı </h4> <h5 style="color:#000000">--> @item.Aciklama</h5>
                                                </div>
                                                <div class="timeline-footer" style="background-color: #dedddd;color:white">
                                                    <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-primary btn-sm" style="width:100px">Düzenle </a>
                                                    <a href="/Sertifika/SertifikaSil/@item.ID" class="btn btn-danger btn-sm" style="margin-left:40px;width:100px">Sil</a>
                                                </div>
                                            </div>
                                        </div>
                                      
                                        <!-- END timeline item -->
                                        <!-- timeline time label -->

                                    </div>

                                </div>
                            </div>
                        }
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->

                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>

